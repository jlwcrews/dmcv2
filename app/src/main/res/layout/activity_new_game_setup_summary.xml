<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ui.NewGameSetupSummaryActivity">

    <TextView
            android:layout_width="309dp"
            android:layout_height="110dp"
            android:id="@+id/summaryText" android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scenarioLabel" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:text="@string/summaryText"
            app:layout_constraintVertical_bias="0.419"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scenarioTextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/scenarioLabel"
            app:layout_constraintStart_toStartOf="@+id/characterRecyclerView"
            android:layout_marginStart="77dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/characterRecyclerView"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/scenarioLabel"
            android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="@+id/monsterRecyclerView"
            app:layout_constraintBottom_toTopOf="@+id/monsterRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/monsterRecyclerView"
            tools:listitem="@layout/recyclerview_character"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="249dp"
            android:layout_height="195dp"
            android:id="@+id/monsterRecyclerView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="138dp"
            tools:listitem="@layout/recyclerview_monster"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scenarioLabel"
            app:layout_constraintEnd_toStartOf="@+id/scenarioTextView" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="159dp"
            android:text="@string/scenarioLabel"/>
</android.support.constraint.ConstraintLayout>